<%= Navigation("clubsessions") %>

<div class="content">
	<h1>Club Sessions</h1>
	
	<table class="table table-striped">
	  <tr>
	    <th>Audience</th>
	    <th>Session Information</th>
	    <th>Start Time</th>
	    <th>End Time</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	
	<% @sessions.each do |session| %>
	  <tr>
	    <td><%= session.audience %></td>
	    <td><%= session.sessioninfo %></td>
	    <td><%= session.starttime %></td>
	    <td><%= session.endtime %></td>
	    <td><%= link_to 'Show', session %></td>
	    <td><%= link_to 'Edit', edit_session_path(session) %></td>
	    <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />
	
	<%= link_to 'Add New Session', new_session_path, :class => "blue-pill" %>
</div>
